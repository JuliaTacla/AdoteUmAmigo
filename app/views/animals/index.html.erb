<p id="notice"><%= notice %></p>

<h1>Animals</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <td><%= image_tag(animal.photo, style: 'height:300px;width:300px;',class: "img-circle img-responsive") %></td>
        <td><%= animal.name %></td>
        <td><%= animal.description %></td>
        <td><%= link_to 'Show', animal %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Animal', new_animal_path %>
